<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_drop_shadow"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/card_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/sample" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <in.woodu.widget.TextView
            android:id="@+id/card_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/card_item_shop_now"
            android:text="Furniture Name"
            android:textColor="@color/black_100"
            android:textSize="16sp" />

        <in.woodu.widget.TextView
            android:id="@+id/card_item_shop_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#FDAC25"
            android:padding="5dp"
            android:text="VIEW IT"
            android:textColor="@color/white_100" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_margin="6dp"
        android:background="@color/black_50" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <in.woodu.widget.TextView
            android:id="@+id/card_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Rs. 14,5000"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/card_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/card_item_favourite"
            android:src="@drawable/ic_share_black_24dp" />

        <RadioButton
            android:id="@+id/card_item_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bookmark_radio_selector"
            android:button="@null" />

    </RelativeLayout>

</LinearLayout>